@{
}
@model eExamApp.Models.UserVM

<div>
    <h2>User Registration</h2>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <h4>User Registration</h4>
            <hr />
            <div class="form-group">
                <label>User Name</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password, new { @class = "control-lable col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.UserType, new { @class = "control-lable col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.UserType,Model.UserTypes, new { @class = "form-control",@id="dllUserType" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registration" class="btn btn-primary mt-2" />
                </div>
            </div>
        </div>
    }
</div>