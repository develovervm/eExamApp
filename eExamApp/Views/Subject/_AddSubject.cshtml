@model eExamApp.Models.SubjectVM

<div>

    @using (Html.BeginForm(new {@id="frmSubject" }))
    {
        <div class="form-horizontal">
            <h4>Course Details</h4>
            <hr />
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <label>Select Course</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.CourseId, Model.CourseList, new { @class = "form-control", @id = "dllCourse" })
                </div>
            </div>
            <div class="form-group">
                <label>Subject Name</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.SubjectName, new { @class = "form-control" })
                </div>
            </div>
            <label>Select Subject Type</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.SubjectType, Model.SubjectTypeList, new { @class = "form-control", @id = "dllSubject" })
            </div>
            <label>Select Semester</label>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.Semester, Model.SemesterList, new { @class = "form-control", @id = "dllSemester" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="btnsubmit" value="@ViewBag.Action" class="btn btn-primary mt-2" />
                </div>
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script type="text/jscript">

    $(document).ready(function () {
        alert('Add Subject Load')
        $("#btnsubmit").click(function (e) {
            //Serialize the form datas.
            var valdata = $("#frmSubject").serialize();
            //to get alert popup
            alert(valdata);
            $.ajax({
                url: "/Subject/AddSubject",
                type: "POST",
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: valdata
            });
        });
    });
        });

   

</script>